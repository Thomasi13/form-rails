<%= form_for @user, url: {action: "create"}, html: {class: "form-group"} do |f| %>
  <%= f.text_field :username, placeholder: "Entrer ton username", class: "form-text text-muted" %>
  <br /> <br />
  <%= f.text_field :email, placeholder: "Entre ton Email", class: "form-text text-muted" %>
  <br /> <br />
  <%= f.text_area :bio, size: "60x12", placeholder: "Raconte ta vie", class: "form-text text-muted" %>
  <br /> <br />
  <%= f.submit "S'inscrire", class: "btn btn-primary" %>
<% end %>
